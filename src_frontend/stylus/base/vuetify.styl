.container
  padding 0 !important

.v-dialog
  top: 0;
  margin: 10% auto 0;
  position: absolute;

.v-list
  padding 0

.v-list__tile
  height 38px
  font-size 15px

.v-btn
  text-transform unset

//margin 0 5px

.v-icon--left
  margin-right: 10px;


.v-icon--right
  margin-left: 10px;


.v-text-field
  padding-top: 10px;
  margin-top: 5px;

.v-text-field > .v-input__control > .v-input__slot
  margin: 0 0 5px;

.v-text-field input
  padding: 4px 0 2px


table.v-table thead tr
  height unset

.v-datatable thead th.column
  height unset
  padding 5px 10px !important
  border-right 1px solid color_border

.v-datatable thead th.column:last-child
  border-right none

table.v-table tbody td
  height: 30px;

table.v-table
  .v-datatable__progress
    display none
  tbody
    td
      height unset
      padding 0 10px !important
      border-right 1px solid color_border

    td:last-child
      border-right none



.elevation-1
  border 1px solid color_border
  box-shadow none !important


.flip-enter {

}

.flip-enter-active {
  animation: flipInX .1s linear;
}

.flip-leave {

}

.flip-leave-active {
  animation: flipOutX .1s linear;
}

@keyframes flipInX {
  from {
    transform: rotateX(90deg)
  }
  to {
    transform: rotateX(0deg)
  }
}

@keyframes flipOutX {
  from {
    transform: rotateX(0deg)
  }
  to {
    transform: rotateX(90deg)
  }
}