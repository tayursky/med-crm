.main-wrapper
  vertical-align top
  font-size 0

.main-right

  vertical-align top
  font-size 14px
  margin 0 0 0 215px
  min-width 600px

  .main-content
    max-width 1200px
    padding 10px

.sidebar
  position absolute
  vertical-align top
  font-size 14px
  float left
  width 215px

  &__logo
    color #fff
    background-color color_bg
    text-align center
    height 50px
    text-decoration none
    font-size 15px
    font-weight bold
    display block

    &__text
      margin: 13px 0 0 0;
      vertical-align: top;
      display: inline-block;
      line-height: 23px;
      padding 2px 50px 0
      letter-spacing 1px

  &__logo:hover
    background-color color_bg_hover

  &__logo:hover > .sidebar__logo__text

  &__inner
    position: relative;
    height: 100%;

  &__text
    text-align: center;
    color #fff
    padding-top: 7px;
    display: block;
    font-size: 18px;
    font-weight: bold;
    height: 40px;
    border-bottom: 1px solid color_border;

  &__text:hover
    color #fff
    text-decoration none
    background-color color_bg_hover


  &__router
    width: 210px;
    font-size: 15px;
    margin: 0 0 0 5px;
    padding: 10px 0;

    &__item:last-child
      border-bottom none

    &__item
      color #fff
      background-color color_bg !important
      display flex
      padding 8px 10px
      text-decoration none
      margin-bottom 1px
      vertical-align top

      i
        margin 0 10px 0 0

    &__item:hover
      background-color color_bg_hover !important

    &__item.is_active
      background-color color_bg_hover !important

    &__label
      vertical-align top
      line-height 16px


    &__split
      height: 6px;
      border: none;

    .active
      color #ffffff
      background-color color_bg_hover

