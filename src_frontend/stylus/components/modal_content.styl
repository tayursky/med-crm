.modal-mask
  position fixed
  z-index 9998
  top 0
  left 0
  width 100%
  height 100%
  background-color rgba(0, 0, 0, .35)
  display table

.modal-wrapper
  margin: 130px auto 0;

.modal-enter
  opacity: 0;

.modal-leave-active
  opacity: 0;

.modal-content
  width: 500px;
  margin: 0 auto;
  padding 0
  font-size 15px
  background-color #fff
  box-shadow: 0 2px 8px rgba(0, 0, 0, .33);

  .modal-header
    padding: 0;
    border-top-left-radius: .3rem;
    border-top-right-radius: .3rem;
    border-bottom: 1px solid color_gray;
    h3
      font-size: 22px;
      padding: 10px 0 0 16px;
      margin: 0;

  .modal-button
    padding: 12px 18px;
    margin: 0;
    border-radius: 0 0.25rem 0 0;
    font-size: 18px;
    border: none;
    font-weight: normal;

  .modal-button.close:before
    content: "X"

  .modal-button:hover
    color: #fff;
    background-color color_main
    opacity: 1;

  .modal-body
    padding 0

    .modal-form
      padding 0

      .form-group
        margin 0
      .form-group:not(.related-field):not(.has-errors):nth-of-type(odd)
        background-color color_gray_lite
      .form-group.has-errors
        background-color #ffe0e0
      .label
        padding 5px 10px
        text-align: right
      select, input, textarea
        margin 5px 5px 5px 0
      textarea
        width 100%

  .form-control
    margin: 0;
    padding: 0 5px 0 0;
    border: none;
    border-radius: 0;
    line-height: normal;
    background: none;

  .form-control select, .form-control input
    padding: 4px 5px 3px;
    width: 100%;
    font-size: .85rem;
    border-radius: 3px;
    border: 1px solid dark-gray;

  .form-control select
    background-color: #fff;

  .form-control select:after
    box-sizing: border-box;
    color: red;

  .form-errors
    width 100%
    padding 0 5px 5px
    &__item
      text-align right
      color red

  .modal-footer
    flex-wrap wrap
    padding 10px 10px 0

    .leftblock
      margin-right auto

    .btn, button
      font-size 14px
      margin-bottom 10px

    .btn:not(:first-child), button:not(:first-child)
      margin 0 0 10px 10px

  .bg-danger
    opacity .5
  .bg-danger:hover
    opacity .75