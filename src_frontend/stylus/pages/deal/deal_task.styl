.deal-task
  &__title
    background-color color_gray
    border-bottom 1px solid color_border

    &__txt
      display inline-block
      padding 8px 10px
      font-weight bold

  &__add
    background-color color_gray
    float right
    border none
    border-radius 0

    i
      padding 3px 2px 2px

  &__form
    border-bottom 1px solid color_border

  &__item:hover
    background-color color_gray_lite

  &__item
    cursor pointer


.deal-tasks

  &__item
    &__time
      text-align right
      font-size 13px
      padding 3px 8px
      border-bottom 1px solid color_border

    &__title, &__comment
      text-align right
      background-color #fffae3
      font-size 14px
      padding 3px 5px
      border-bottom 1px solid color_border

    &__title
      font-weight bold

    &__source
      font-weight bold
      font-size 13px
      border-bottom 1px solid color_border
      padding 3px 8px
