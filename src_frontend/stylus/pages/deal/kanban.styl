.kanban
  padding 0

  &__table
    width 100%
    height 780px
    white-space nowrap
    overflow auto
    padding 0 0 10px
    margin 10px 0 0 0

    &__set_stage
      border-bottom 1px solid color_border

      &__plus, &__minus, &__empty
        cursor pointer
        width 50%
        display inline-block
        padding 0

        i
          font-size 15px
          padding 5px 15px

      &__plus
        text-align right

      &__minus:hover, &__plus:hover
        background-color color_gray

  &__deal:hover
    background-color color_gray_lite

  &__deal
    background-color #fff
    cursor pointer
    margin 2px 1px
    border 1px solid
    font-size 0
    border-radius 3px
    border-top 3px solid
    border-right 1px solid
    border-bottom 3px solid
    border-left 1px solid
    white-space normal

    &__title
      font-size 0
      border-bottom 1px solid color_border
      text-align right

    &__date, &__minutes, &__persons_count, &__arrear
      font-size 14px
      display inline-block
      padding 6px

    &__minutes, &__persons_count
      border-left 1px solid color_border

    &__comment
      color #000
      font-size 0
      padding 0
      background-color #fffae3
      border-bottom 1px solid color_border
      white-space normal

      &__text
        font-size 14px
        padding 4px 8px

    &__arrear
      vertical-align top
      margin-top -6px
      color #fff
      background-color color_red
      border-right 1px solid color_border

    &__persons
      font-size 0
      padding 0

    &__person
      font-size 14px
      padding 4px 8px


  &__stage
    display inline-block
    min-width 200px
    vertical-align top

    &__date
      height 30px

    &__head, &__mount
      padding 5px 10px
      font-size 14px

    &__mount
      font-size 15px

    &__item_add
      border 1px solid color_gray_lite
      margin 0 1px 1px
      background-color #ffffff
      cursor pointer
      padding 5px 10px
      text-align center
      font-size 15px

    &__item_add:hover
      background-color color_gray